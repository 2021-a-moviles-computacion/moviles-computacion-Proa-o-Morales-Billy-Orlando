<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UsoBaseDatos">

    <Button
        android:id="@+id/bt_registrar"
        android:layout_width="260dp"
        android:layout_height="44dp"
        android:layout_marginTop="48dp"
        android:text="INSERTAR "
        app:layout_constraintEnd_toEndOf="@+id/txt_descripcion"
        app:layout_constraintHorizontal_bias="0.447"
        app:layout_constraintStart_toStartOf="@+id/txt_descripcion"
        app:layout_constraintTop_toBottomOf="@+id/txt_descripcion" />

    <Button
        android:id="@+id/bt_consultar"
        android:layout_width="252dp"
        android:layout_height="42dp"
        android:layout_marginTop="24dp"
        android:text="CONSULTAR"
        app:layout_constraintEnd_toEndOf="@+id/bt_registrar"
        app:layout_constraintStart_toStartOf="@+id/bt_registrar"
        app:layout_constraintTop_toBottomOf="@+id/bt_registrar" />

    <Button
        android:id="@+id/bt_modificar"
        android:layout_width="256dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="MODIFICAR"
        app:layout_constraintEnd_toEndOf="@+id/bt_consultar"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="@+id/bt_consultar"
        app:layout_constraintTop_toBottomOf="@+id/bt_consultar" />

    <Button
        android:id="@+id/bt_eliminar"
        android:layout_width="259dp"
        android:layout_height="51dp"
        android:layout_marginTop="20dp"
        android:text="ELIMINAR"
        app:layout_constraintEnd_toEndOf="@+id/bt_modificar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bt_modificar"
        app:layout_constraintTop_toBottomOf="@+id/bt_modificar" />

    <EditText
        android:id="@+id/txt_id"
        android:layout_width="306dp"
        android:layout_height="39dp"
        android:layout_marginTop="92dp"
        android:editable="false"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_nombre"
        android:layout_width="301dp"
        android:layout_height="45dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/txt_id"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_id"
        app:layout_constraintTop_toBottomOf="@+id/txt_id" />

    <EditText
        android:id="@+id/txt_descripcion"
        android:layout_width="298dp"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Descripcion"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/txt_nombre"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_nombre"
        app:layout_constraintTop_toBottomOf="@+id/txt_nombre" />
</androidx.constraintlayout.widget.ConstraintLayout>