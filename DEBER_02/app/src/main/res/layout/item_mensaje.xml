<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:layout_marginBottom="56dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/txt_mensaje_enviado"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#F0F6F0"
            android:background="@drawable/style_bordes"
            android:text="Mensaje recibido "
            android:translationX="15dp" />

        <TextView
            android:id="@+id/txt_mensaje_recibido"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#BDECBF"
            android:background="@drawable/style_bordes"
            android:text="Mensaje Enviado"
            android:translationX="210dp"
            android:translationY="20dp" />
    </LinearLayout>

</LinearLayout>